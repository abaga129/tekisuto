<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/clickable_word_pressed">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#404F7F98" /> <!-- 25% opacity primary color -->
            <stroke
                android:width="1dp"
                android:color="#664F7F98" /> <!-- 40% opacity primary color -->
            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2dp" />
        </shape>
    </item>
</ripple>