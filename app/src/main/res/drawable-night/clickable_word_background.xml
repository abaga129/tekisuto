<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/primary_dark">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#667AAAC0" /> <!-- 40% primary_light for better visibility -->
            <stroke
                android:width="1dp"
                android:color="#997AAAC0" /> <!-- 60% primary_light -->
            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2dp" />
        </shape>
    </item>
</ripple>