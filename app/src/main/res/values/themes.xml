<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - minimal version -->
    <style name="Theme.Tekisuto" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Minimal theme customizations -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Theme.Tekisuto.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Tekisuto.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
    </style>

    <style name="Theme.Tekisuto.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- OCR Popup Card style -->
    <style name="Widget.Tekisuto.OcrPopupCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">0dp</item>
    </style>
    
    <!-- Custom button style -->
    <style name="Widget.Tekisuto.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Outlined button style -->
    <style name="Widget.Tekisuto.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.Tekisuto.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>