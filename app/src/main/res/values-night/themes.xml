<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tekisuto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/text_dark</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/text_dark</item>
        <item name="colorSurface">#2A3C44</item> <!-- Slightly lighter than text_dark -->
        <item name="colorError">@color/accent_light</item>
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Tekisuto.Dark.Button</item>
        <!-- Card styles -->
        <item name="materialCardViewStyle">@style/Widget.Tekisuto.Dark.CardView</item>
    </style>
    
    <!-- Custom button style for dark theme -->
    <style name="Widget.Tekisuto.Dark.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="rippleColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Outlined button style for dark theme -->
    <style name="Widget.Tekisuto.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="rippleColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card style for dark theme -->
    <style name="Widget.Tekisuto.Dark.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#2A3C44</item> <!-- Slightly lighter than background -->
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>