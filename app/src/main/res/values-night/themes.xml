<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base night theme -->
    <style name="Theme.Tekisuto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorSurface">#242424</item>
        <item name="colorOnSurface">@color/text_light</item>
        <item name="colorOnSurfaceVariant">@color/reading_text_color</item>
        
        <!-- Secondary container for badges, chips, etc. -->
        <item name="colorSecondaryContainer">#303030</item>
        <item name="colorOnSecondaryContainer">@color/text_light</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <!-- No action bar theme variant -->
    <style name="Theme.Tekisuto.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Action bar overlay theme -->
    <style name="Theme.Tekisuto.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    
    <!-- Popup overlay theme -->
    <style name="Theme.Tekisuto.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />
    
    <!-- OCR Popup Card style for night mode -->
    <style name="Widget.Tekisuto.OcrPopupCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>
    
    <!-- Custom button style for night mode -->
    <style name="Widget.Tekisuto.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Outlined button style for night mode -->
    <style name="Widget.Tekisuto.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Card style for night mode -->
    <style name="Widget.Tekisuto.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>
</resources>