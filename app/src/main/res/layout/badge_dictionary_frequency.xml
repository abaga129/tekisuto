<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dictionary_badge_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/badge_background"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="#00ff00">  <!-- Debug background color to make visible -->

        <!-- Dictionary Name -->
        <TextView
            android:id="@+id/dictionary_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="JPDB" />

        <!-- Frequency Data -->
        <TextView
            android:id="@+id/frequency_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9sp"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="#685, 18667" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
