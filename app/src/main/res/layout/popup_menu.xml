<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardUseCompatPadding="true"
    style="@style/Widget.Tekisuto.OcrPopupCard">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_title"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Improved OCR Button -->
        <Button
            android:id="@+id/btn_ocr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/perform_ocr"
            android:drawableStart="@drawable/ic_ocr_small"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:minHeight="48dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            style="@style/Widget.Tekisuto.Button" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp"
            android:textAllCaps="false"
            style="@style/Widget.Tekisuto.Button.OutlinedButton" />
            
        <Button
            android:id="@+id/btn_exit_tekisuto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit_tekisuto"
            android:backgroundTint="?attr/colorSecondary"
            android:textColor="?attr/colorOnSecondary"
            android:minHeight="48dp"
            android:textAllCaps="false" />

    </LinearLayout>
</androidx.cardview.widget.CardView>